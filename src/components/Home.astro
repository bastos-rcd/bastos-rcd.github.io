---
import { useI18n } from "../i18n";

const { currentLocale } = Astro;
const i18n = useI18n({ currentLocale });
---

<section
  id="home"
  class="w-11/12 md:w-3/4 flex flex-col md:flex-row mt-40 md:mt-44 md:gap-x-5 gap-y-10 md:gap-y-0 items-center"
>
  <img src="/img/self.webp" class="w-3/4 md:w-1/4 rounded-full" />

  <div
    class="w-full md:w-3/4 flex flex-col gap-y-5 md:gap-y-10 items-center justify-center"
  >
    <h1 class="text-2xl md:text-4xl text-center">
      {i18n.HOME.TITLE}
    </h1>
    <div class="text-base md:text-lg text-center">
      {i18n.HOME.DESCRIPTION}
    </div>
    <a
      href="/cv.pdf"
      target="_blank"
      class="text-lg md:text-xl border border-white px-2 md:px-4 py-1 md:py-2 rounded-xl hover:bg-gray-500 transition-colors duration-300"
    >
      {i18n.HOME.CV}
    </a>
  </div>
</section>
