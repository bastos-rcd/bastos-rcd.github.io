---
import Title from "@/components/title.astro";
import ProjectsCard from "@/components/project/project-card.astro";

interface Props {
  i18n: any;
}
const { i18n } = Astro.props;
---

<section
  id="project"
  class="w-11/12 md:w-3/4 flex flex-col justify-center items-center gap-y-4 md:gap-y-6"
>
  <Title title={i18n.TITLE} />

  <div
    class="w-full grid grid-cols-1 md:grid-cols-2 justify-center gap-y-6 md:gap-y-10"
  >
    {i18n.LIST.map((project: any) => <ProjectsCard project={project} />)}
  </div>
</section>
