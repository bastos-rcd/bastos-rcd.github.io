---
import Title from "@/components/title.astro";
import EducationCard from "@/components/education/education-card.astro";

interface Props {
  i18n: any;
}
const { i18n } = Astro.props;
---

<section
  id="education"
  class="w-11/12 md:w-3/4 flex flex-col justify-center items-center gap-y-4 md:gap-y-6"
>
  <Title title={i18n.TITLE} />

  <ol class="w-full justify-center items-center sm:flex">
    {i18n.LIST.map((education: any) => <EducationCard education={education} />)}
  </ol>
</section>
